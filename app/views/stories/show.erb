<% content_for :title do -%><%= @story.name %> by <%= @story.author.name %><% end -%>
<% content_for :description do -%><%= @story.description %><% end -%>


<header class="flex flex-row mb-6 mt-6">
  <div class="flex-none w-8 m-5">
    <img class="max-w-full max-h-full" src="<%= asset_pack_path 'images/logo.png' %>" />
  </div>
  <div class="flex-1 mt-6 mr-2">
    <nav><a href="" rel="author"><%= @story.author.name %>'s Stories</a></nav>
    <h2 class="font-semibold text-3xl"><%= @story.name %> by <%= @story.author.name %></h2>
  </div>
</header>

<div class="container lg:w-3/5 md:w-4/5 mx-auto px-4 leading-normal text-xl">
<% if @chapter.first? -%>
  <blockquote class="mx-10 mb-20 mt-20">
    <%= @story.intro.html_safe %>
  </blockquote>
<% end -%>

  <h3 class="font-semibold text-2xl mb-6"><%= @chapter.title %></h3>

  <%= @chapter.contents.html_safe %>
</div>

<footer class="container flex mx-auto px-4 mb-24 mt-6 leading-normal border-grey-darkest pt-6 border-t">
  <nav class="flex-1">
    <% unless @chapter.first? -%>
    <a class="inline-block" href="<%= story_path(id: @story.id, slug: @story.slug, chapter_order: @chapter.order - 1) %>">Previous Chapter</a>
    <% end -%>
    <% unless @chapter.last? -%>
    |
    <a class="inline-block" href="<%= story_path(id: @story.id, slug: @story.slug, chapter_order: @chapter.order + 1) %>">Next Chapter</a>
    <% end -%>
  </nav>
  <p class="w-1/3 md:w-auto"><%= @story.copyright_notice %></p>
</footer>